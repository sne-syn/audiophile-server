generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Category {
  id        String    @id @default(uuid())
  name      String
  image     String
  products  Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Product {
  id           String    @id @default(uuid())
  slug         String
  name         String
  new          Boolean   @default(true)
  price        Int
  description  String
  features     String
  previewImage String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  category     Category  @relation(fields: [categoryId], references: [id])
  categoryId   String
  includes     Include[]
  others       Other[]
  gallery      Gallery[]
  image        Image?
}

model Image {
  id        String   @id @default(uuid())
  mobile    String
  tablet    String
  desktop   String
  otherId   String?  @unique
  productId String?  @unique
  galleryId String?  @unique
  other     Other?   @relation(fields: [otherId], references: [id])
  product   Product? @relation(fields: [productId], references: [id])
  gallery   Gallery? @relation(fields: [galleryId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Include {
  id        String    @id @default(uuid())
  quantity  Int
  item      String
  product   Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Other {
  id        String    @id @default(uuid())
  slug      String
  name      String
  image     Image?
  product   Product[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Gallery {
  id        String   @id @default(uuid())
  position  Int
  image     Image?
  productId String   @unique
  product   Product  @relation(fields: [productId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
